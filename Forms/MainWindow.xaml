<Window x:Class="Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forms"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <StackPanel Name="Stack" Orientation="Vertical">
        <Button Content="New"
              Click="NewWindow" Margin="5,10" Height="25" Background="CornflowerBlue" Foreground="AliceBlue" Width="680"/>
        <ProgressBar x:Name="progressBar" Height="350" IsIndeterminate = "false" Orientation = "Vertical" Margin="5,0" Background="DarkKhaki"/>
        <Button Content="Start Animation" Click="Click" Height="50" Width="680" Margin="5,10" Background="CornflowerBlue" Foreground="AliceBlue" />
    </StackPanel>
</Window>

